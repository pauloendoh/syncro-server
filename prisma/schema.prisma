// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  // googleId  String?  @unique
  username String @unique
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ratings   Rating[]
  interests Interest[]
}

enum ImdbItemType {
  tvSeries
  movie
}

model ImdbItem {
  id          String       @id
  title       String
  type        ImdbItemType
  imageUrl    String       @default("")
  year        Int?
  avgRating   Float
  ratingCount Int
  plotSummary String       @default("")
  ratings     Rating[]
  interests   Interest[]
}

model Rating {
  id         String    @id @default(cuid())
  imdbItem   ImdbItem? @relation(fields: [imdbItemId], references: [id])
  imdbItemId String?

  user        User   @relation(fields: [userId], references: [id])
  userId      String
  ratingValue Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Interest {
  id         String    @id @default(cuid())
  imdbItem   ImdbItem? @relation(fields: [imdbItemId], references: [id])
  imdbItemId String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  interestLevel Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
